{% set flex = grav.flex_objects %}
{% set directory_url = base_url_relative ~ page.route() %}

<table id="data-table" class="table">
    <colgroup>
        <col width="20" />
        <col width="80" />
    </colgroup>
    <thead>
    <tr>
        <th>Type</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    {% for type,directory in flex.directories %}
        <tr>
            <td>
                <a href="{{ directory_url ~ '/type:' ~ type }}">{{ directory.title }}</a>
            </td>
            <td>
                {{ directory.description }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
